@using blogmongo.Models.Entiteti
@model User
@{
    ViewBag.Title = Model.Ime +" "+ Model.Prezime;
}

<div>
    <button id="blogs" class="btn" onclick="location.href='@Url.Action("Details","Blogs")/@Model.Id.ToString()'">Blogs</button>
    <button id="favorites" class="btn"  onclick="location.href='@Url.Action("Details","Favorites")/@Model.Id.ToString()'">Favorites</button>
    <button id="update" class="btn" onclick="location.href='@Url.Action("Edit","Profile")/@Model.Id.ToString()'">Edit profile</button>
</div>

<h2>@Model.Ime @Model.Prezime</h2>

<p>@Model.Opis</p>

